<Window x:Class="EjercicioWPF5_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF5_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Width="400" Height="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Margin="6">Btn 0,0</Button>
        <Button Grid.Row="0" Grid.Column="1" Margin="6">Btn 0,1 (Auto)</Button>
        <Button Grid.Row="1" Grid.Column="0" Margin="6">Btn 1,0</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="6">Btn 1,1</Button>
    </Grid>
</Window>
