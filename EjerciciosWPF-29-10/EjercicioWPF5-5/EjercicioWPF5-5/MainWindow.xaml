<Window x:Class="EjercicioWPF5_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF5_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray">
            <Button Content="Archivo" Margin="5"/>
            <Button Content="Editar" Margin="5"/>
            <Button Content="Ayuda" Margin="5"/>
        </StackPanel>

        <TextBlock DockPanel.Dock="Bottom" 
                   Text="Terminado" 
                   Background="LightGray"
                   HorizontalAlignment="Center" 
                   Padding="5"
                   FontWeight="Bold"/>

        <Grid Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Bienvenido al menú principal" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="16" />

            <Button Grid.Row="1" 
                    Content="Aceptar" 
                    Width="100" 
                    Height="30" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,20"/>
        </Grid>
    </DockPanel>
</Window>
