<Window x:Class="EjercicioWPF5_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF5_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center">Formulario de contacto</TextBlock>
        <Label Content="Nombre:" HorizontalAlignment="Center" Margin="10"/>
        <TextBox Name="InputTextBox" Width="200" Height="30" Margin="10"/>
        <Label Content="Correo electrónico:" HorizontalAlignment="Center" Margin="10"/>
        <TextBox Name="EmailTextBox" Width="200" Height="30" Margin="10"/>
        <Button Name="ProcessButton" Width="100" Height="30" Margin="10" Click="ProcessButton_Click">Enviar</Button>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="btnLimpiar" Width="100" Height="30" Margin="10" Click="LimpiarButton_Click">Limpiar</Button>
            <Button Name="btnCancelar" Width="100" Height="30" Margin="10" Click="CancelarButton_Click">Cancelar</Button>
        </StackPanel>

    </StackPanel>



</Window>
