<Window x:Class="Practica9Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica9Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Añadimos SelectionMode="Extended" para permitir la selección múltiple (Select All) -->
        <ListBox x:Name="lstItems" Grid.Column="0" Margin="10" SelectionMode="Extended">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="250" Height="20" Text="{Binding Name}" Margin="0,0,10,0" FontWeight="SemiBold"/>
                        <ProgressBar Width="150" Height="20" Value="{Binding progress}" ToolTip="{Binding progress, StringFormat={}{0}%}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Width="200" Height="25" Margin="0,0,0,10" Text="ListBox selection" FontWeight="Bold" FontSize="14"/>
            <Button x:Name="btnShow" Margin="5" Content="Show selected" Width="100" Height="25" Click="btnShow_Click"/>
            <Button x:Name="btnLast" Margin="5" Content="Select last" Width="100" Height="25" Click="btnLast_Click"/>
            <Button x:Name="btnNext" Margin="5" Content="Select next" Width="100" Height="25" Click="btnNext_Click"/>
            <Button x:Name="btnC" Margin="5" Content="Select C#" Width="100" Height="25" Click="btnC_Click"/>
            <Button x:Name="btnAll" Margin="5" Content="Select all" Width="100" Height="25" Click="btnAll_Click"/>
        </StackPanel>
    </Grid>
</Window>