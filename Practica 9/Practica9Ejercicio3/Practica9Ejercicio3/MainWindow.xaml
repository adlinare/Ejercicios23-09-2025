<Window x:Class="Practica9Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica9Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Datos de Usuarios Enlazados (4 Columnas)" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListView x:Name="DataListView"
                  Grid.Row="1"
                  BorderBrush="LightGray"
                  BorderThickness="1">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nombre Completo" Width="150" DisplayMemberBinding="{Binding Name}"/>

                        <GridViewColumn Header="Edad" Width="80" DisplayMemberBinding="{Binding Age}"/>

                        <GridViewColumn Header="Ciudad de Origen" Width="150" DisplayMemberBinding="{Binding City}"/>

                        <GridViewColumn Header="Fecha de Registro" Width="150" 
                                    DisplayMemberBinding="{Binding RegistrationDate, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                    </GridView>
                </ListView.View>

            </ListView>
        </Grid>
</Window>