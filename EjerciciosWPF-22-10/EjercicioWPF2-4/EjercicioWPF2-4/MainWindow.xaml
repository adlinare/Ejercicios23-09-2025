<Window x:Class="EjercicioWPF2_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF2_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
     
        <Image x:Name="imgPrincipal" 
               Width="200" Height="200"
               Stretch="Uniform"
               Source="Assets/imagen1.jpg" 
               Margin="0,0,0,15"/>

   
        <Button x:Name="btnCambiar" 
                Content="Cambiar imagen" 
                Width="150" 
                Click="btnCambiar_Click"/>
    </StackPanel>
   
</Window>
