<Window x:Class="EjercicioWPF2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF2_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label x:Name="lblPregunta" 
               FontWeight="Bold" 
               FontSize="16"
               Content="¿Cuál es el lenguaje principal de programación para Android?"/>

        <RadioButton x:Name="rbtnJava" Content="Java" Margin="10,5,0,0"/>
        <RadioButton x:Name="rbtnPython" Content="Python" Margin="10,2,0,0"/>
        <RadioButton x:Name="rbtnKotlin" Content="Kotlin" Margin="10,2,0,0"/>
        <RadioButton x:Name="rbtnCSharp" Content="C#" Margin="10,2,0,0"/>

        <Button x:Name="btnCorregir"
                Content="Corregir"
                Width="100"
                Margin="0,15,0,0"
                Click="btnCorregir_Click"/>

        <Label x:Name="lblIntentos"
               Content="Intentos restantes: 2"
               Margin="0,10,0,0"
               FontStyle="Italic"
               Foreground="Gray"/>
    </StackPanel>
</Window>
