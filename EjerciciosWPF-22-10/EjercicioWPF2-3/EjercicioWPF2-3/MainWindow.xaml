<Window x:Class="EjercicioWPF2_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF2_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="30" VerticalAlignment="Center" >


        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
            <Label Content="Usuario:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsuario" Width="180"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
            <Label Content="Password:" Width="80" VerticalAlignment="Center"/>
            <PasswordBox x:Name="txtPassword" Width="180" 
                         MaxLength="8"
                         PasswordChar="*"/>
        </StackPanel>

        <Button x:Name="btnLogin" 
                Content="Iniciar sesión"
                Width="150"
                HorizontalAlignment="Center"
                Click="btnLogin_Click"/>

    </StackPanel>
</Window>
