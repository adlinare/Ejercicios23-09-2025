<Window x:Class="Practica11Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica11Ejercicio1"
        mc:Ignorable="d"
        Title="Ejemplo Botones con OnClick Diferentes" Height="600" Width="800">
    <Grid>
        <Border Name="BorderOscuro" BorderBrush="#333333" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">


                <TextBlock Text="Seleccione un estilo:" FontSize="14" Margin="0,0,0,20" TextAlignment="Center"/>

                <Button Name="btnOscuro"
                        Width="250"
                        Height="45"
                        Margin="0,0,0,10"
                        Click="btnOscuro_Click">


                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Images/Moon.jpg" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Estilo Oscuro" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>

                </Button>

                <Button Name="btnClaro"
                        Width="250"
                        Height="45"
                        Margin="0,0,0,10"
                        Click="btnClaro_Click">

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Images/Sun.jpg" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Estilo Claro" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                </Button>

                <Button Name="btnVerde"
                        Width="250"
                        Height="45"
                        Click="btnVerde_Click">

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Images/Green.JPG" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Estilo Verde" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>