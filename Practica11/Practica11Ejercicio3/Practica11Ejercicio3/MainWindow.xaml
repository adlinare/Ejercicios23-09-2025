<Window x:Class="Practica11Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica11Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="3">
            <StackPanel>
                <TextBlock Text="Formulario de Datos Personales" FontSize="20" FontWeight="Bold"/>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nombre:" FontSize="12" Margin="10"/>
                        <TextBox Width="200" Height="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Apellido:" FontSize="12" Margin="10"/>
                        <TextBox Width="200" Height="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Fecha de nacimineto:" FontSize="12" Margin="10"/>
                        <DatePicker Width="200" Height="25"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Estado civil:" FontSize="12" Margin="10"/>
                        <RadioButton Content="Soltero" GroupName="EstadoCivil" Margin="5,10"/>
                        <RadioButton Content="Casado" GroupName="EstadoCivil" Margin="5,10"/>
                        <RadioButton Content="Divorciado" GroupName="EstadoCivil" Margin="5,10"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Genero:" FontSize="12" Margin="10"/>
                        <RadioButton Content="Hombre" GroupName="Genero" Margin="5,10"/>
                        <RadioButton Content="Mujer" GroupName="Genero" Margin="5,10"/>
                        <RadioButton Content="Otro" GroupName="Genero" Margin="5,10"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="3">
            <StackPanel>
                <TextBlock Text="Formulario de Datos Laborales" FontSize="20" FontWeight="Bold"/>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Puesto de trabajo:" FontSize="12" Margin="10"/>
                        <TextBox Width="200" Height="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Fecha de ingreso:" FontSize="12" Margin="10"/>
                        <DatePicker Width="200" Height="25"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Salario mensual:" FontSize="12" Margin="10"/>
                        <TextBox Width="200" Height="20"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Tipo de contrato:" FontSize="12" Margin="10"/>
                        <ComboBox Width="200" Height="25">
                            <ComboBoxItem Content="Indefinido"/>
                            <ComboBoxItem Content="Temporal"/>
                            <ComboBoxItem Content="Prácticas"/>
                        </ComboBox>
                    </StackPanel>


                </StackPanel>

            </StackPanel>
        </Border>
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="3">
            <StackPanel>
                <TextBlock Text="Formulario de Datos de Interes" FontSize="20" FontWeight="Bold"/>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Hobbies:" FontSize="12" Margin="10"/>
                        <CheckBox Content="Deportes" Margin="5,10"/>
                        <CheckBox Content="Lectura" Margin="5,10"/>
                        <CheckBox Content="Viajes" Margin="5,10"/>
                        <CheckBox Content="Música" Margin="5,10"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nivel de educación:" FontSize="12" Margin="10"/>
                        <ComboBox Width="200" Height="25">
                            <ComboBoxItem Content="Secundaria"/>
                            <ComboBoxItem Content="Preparatoria"/>
                            <ComboBoxItem Content="Licenciatura"/>
                            <ComboBoxItem Content="Posgrado"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="¿Tiene experiencia laboral?" FontSize="12" Margin="10"/>
                        <RadioButton Content="Sí" GroupName="ExperienciaLaboral" Margin="5,10"/>
                        <RadioButton Content="No" GroupName="ExperienciaLaboral" Margin="5,10"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </Border>




    </Grid>
</Window>
