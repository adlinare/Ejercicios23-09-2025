<Window x:Class="Practica11Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica11Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="back">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" >
            <TextBlock Text="Seleccione un color:" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="R:" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="SliderR" Minimum="0" Maximum="255" Width="600" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="TextBlockR" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding ElementName=SliderR, Path=Value, StringFormat=N0}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="G:" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="SliderG" Minimum="0" Maximum="255" Width="600" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="TextBlockG" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding ElementName=SliderG, Path=Value, StringFormat=N0}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="B:" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="SliderB" Minimum="0" Maximum="255" Width="600" ValueChanged="Slider_ValueChanged"/>
                <TextBlock x:Name="TextBlockB" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding ElementName=SliderB, Path=Value, StringFormat=N0}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
