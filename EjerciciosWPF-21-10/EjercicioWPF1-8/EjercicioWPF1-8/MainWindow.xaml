<Window x:Class="EjercicioWPF1_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF1_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Módulos que pienso aprobar" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- CheckBox principal con tres estados -->
        <CheckBox x:Name="chkTodos" 
                  Content="Todos los módulos" 
                  IsThreeState="True"
                  Checked="chkTodos_Checked"
                  Unchecked="chkTodos_Unchecked"
                  Indeterminate="chkTodos_Indeterminate"/>

        <StackPanel Margin="20,5,0,0">
            <CheckBox x:Name="chkDI" 
                      Content="Desarrollo de Interfaces" 
                      Checked="Modulo_CheckedChanged" 
                      Unchecked="Modulo_CheckedChanged"/>
            <CheckBox x:Name="chkSGE" 
                      Content="Sistemas de Gestión Empresarial" 
                      Checked="Modulo_CheckedChanged" 
                      Unchecked="Modulo_CheckedChanged"/>
            <CheckBox x:Name="chkAD" 
                      Content="Acceso a Datos" 
                      Checked="Modulo_CheckedChanged" 
                      Unchecked="Modulo_CheckedChanged"/>
        </StackPanel>
    </StackPanel>
</Window>
