<Window x:Class="EjercicioWPF1_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF1_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        

        <!-- editable -->
        <TextBox x:Name="txtEntrada"
                 Height="80"
                 Margin="0,-90,0,0"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 SelectionChanged="txtEntrada_SelectionChanged"
                 VerticalScrollBarVisibility="Auto"
                 />

        <!--solo lectura -->
        <TextBox x:Name="txtSeleccion"
                 Margin="0,220,0,0"
                 IsReadOnly="True"
                 Text="Has seleccionado..."
                 FontWeight="Bold"
                 />
    </Grid>
</Window>
