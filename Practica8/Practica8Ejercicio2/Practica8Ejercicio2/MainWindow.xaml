<Window x:Class="Practica8Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica8Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>

            <!-- MENÚ SUPERIOR -->
            <Menu DockPanel.Dock="Top">

                <!-- OPCIÓN 1 -->
                <MenuItem Header="Opción _1">
                    <MenuItem Header="Subopción 1.1" Click="SubOpcion11_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/icon1.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Subopción 1.2" Click="SubOpcion12_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/icon2.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <Separator/>

                    <MenuItem Header="Subopción 1.3" Click="SubOpcion13_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/icon3.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <!-- OPCIÓN 2 -->
                <MenuItem Header="Opción _2">
                    <MenuItem Header="Subopción 2.1" Click="SubOpcion21_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/icon4.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Subopción 2.2" Click="SubOpcion22_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/icon5.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <Separator/>

                    <MenuItem Header="Subopción 2.3" Click="SubOpcion23_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/icon6.png" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

            </Menu>

            <!-- Contenido principal -->
            <Grid>
                <TextBlock Text="Contenido de la ventana"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="18"/>
            </Grid>

        </DockPanel>
    </Window>