<Window x:Class="EjercicioWPF6_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Contacto" Height="300" Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=txtNombre}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Assets/nombre.png" Width="20" Height="20" Margin="0,0,5,0"/>
                <AccessText Text="_Nombre:"/>
            </StackPanel>
        </Label>

        <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=txtEmail}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Assets/correo.png" Width="20" Height="20" Margin="0,0,5,0"/>
                <AccessText Text="_Email:"/>
            </StackPanel>
        </Label>


        <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBox x:Name="txtMensaje"
                 Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                 Margin="5" Height="80"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                />

        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Enviar"
                HorizontalAlignment="Center"
                Margin="5"
                Padding="10,5"
                Click="BtnEnviar_Click">
            <Button.ToolTip>
                <ToolTip Content="Haz clic para enviar el mensaje con tus datos"/>
            </Button.ToolTip>
        </Button>
    </Grid>
</Window>

