<Window x:Class="EjercicioWPF3_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF3_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">


        <StackPanel Margin="10">
            <Label Content="_Nombre:" Target="{Binding  ElementName=txtNombre}"/>
            <TextBox Name="txtNombre" Width="150" Margin="0,0,0,10" TabIndex="0"/>

            <Label Content="_Dirección:" Target="{Binding  ElementName=txtDireccion}"/>
            <TextBox Name="txtDireccion" Width="150" Margin="0,0,0,10" TabIndex="2"/>
        </StackPanel>


        <StackPanel Margin="10">
            <Label Content="_Apellido:" Target="{Binding  ElementName=txtApellido}"/>
            <TextBox Name="txtApellido" Width="150" Margin="0,0,0,10" TabIndex="1"/>

            <Label Content="_Código Postal:" Target="{Binding  ElementName=txtCP}"/>
            <TextBox Name="txtCP" Width="150" Margin="0,0,0,10" TabIndex="3"/>
        </StackPanel>

    </StackPanel>
</Window>
