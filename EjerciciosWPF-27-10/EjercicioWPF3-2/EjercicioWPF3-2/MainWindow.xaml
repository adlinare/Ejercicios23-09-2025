<Window x:Class="EjercicioWPF3_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioWPF3_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="15">

        <Label Content="Nombre:"/>
        <TextBox Name="txtNombre" Margin="0,0,0,10"/>

        <Label Content="Email:"/>
        <TextBox Name="txtEmail" Margin="0,0,0,10"/>

        <Button Content="Enviar"
            Padding="5">
            <ToolTipService.ToolTip>
                <ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/StoreLogo.png"
                       Width="30" Height="30" />
                        <TextBlock Text="Haz clic aquí para enviar los datos…"/>
                    </StackPanel>
                </ToolTip>
            </ToolTipService.ToolTip>
        </Button>
    </StackPanel>
</Window>
