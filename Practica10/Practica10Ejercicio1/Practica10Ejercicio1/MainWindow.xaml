<Window x:Class="Practica10Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica10Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Introduce un DNI sin letra:" VerticalAlignment="Center"/>
            <TextBox x:Name="InputTextBox" Width="200" Margin="5,0" KeyDown="InputTextBox_KeyDown"/>
        </StackPanel>
        <TextBlock x:Name="ResultTextBlock" Grid.Row="1" Margin="10" FontSize="16" TextWrapping="Wrap"/>

    </Grid>
</Window>
