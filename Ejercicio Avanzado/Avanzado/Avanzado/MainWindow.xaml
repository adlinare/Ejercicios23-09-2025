<Window x:Class="Avanzado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avanzado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <TextBlock Grid.Row="0" Text="Lista de Usuarios" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="UserListBox"
                 Grid.Row="1"
                 Margin="0,0,0,10"
                 Padding="5"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Stretch">
            <Button Content="Agregar Nuevo Usuario"
                    Click="AddUser_Click"
                    Margin="0,0,0,10"
                    Padding="10,5"
                    FontSize="14"
                    Background="Green" Foreground="White" BorderThickness="0"/>

                <Button Content="Salir"
                    Click="Exit_Click"
                    Padding="10,5"
                    FontSize="14"
                    Background="Red" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Window>
